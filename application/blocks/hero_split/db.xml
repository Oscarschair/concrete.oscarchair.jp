<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.concrete5.org/doctrine-xml/0.5"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">
    <table name="btHeroSplit">
        <field name="bID" type="integer">
            <unsigned/>
            <key/>
        </field>
        <field name="image" type="integer" />
        <field name="image2" type="integer" />
        <field name="title" type="string" />
        <field name="title2" type="string" />
        <field name="body" type="text" />
        <field name="body2" type="text" />
        <field name="buttonText" type="string" />
        <field name="buttonText2" type="string" />
        <field name="buttonExternalLink" type="string" size="255" />
        <field name="buttonExternalLink2" type="string" size="255" />
        <field name="buttonInternalLinkCID" type="integer">
            <unsigned/>
            <default value="0" />
        </field>
        <field name="buttonInternalLinkCID2" type="integer">
            <unsigned/>
            <default value="0" />
        </field>
        <field name="buttonFileLinkID" type="integer">
            <unsigned/>
            <default value="0" />
        </field>
        <field name="buttonFileLinkID2" type="integer">
            <unsigned/>
            <default value="0" />
        </field>
        <field name="height" type="string" />
        <field name="buttonColor" type="string" />
        <field name="buttonStyle" type="string" />
        <field name="buttonSize" type="string" />
    </table>
</schema>
